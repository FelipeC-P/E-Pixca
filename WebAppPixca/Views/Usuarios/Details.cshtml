@model WebAppPixca.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="~/css/details.css" rel="stylesheet" />
</head>

<body>
    <div class="d-flex justify-content-between">
        <h1 class="mr-3">Mi perfil</h1>
        <div class="text-right">
            <a asp-action="Index" asp-controller="Home"> <i class="fas fa-backward"></i> Regresar</a>
        </div>
    </div>
    <hr />
    <form class="form">
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Nombre(s)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreUsuario)
                </dd>
                <dt class="col-sm-2">
                    Apellido Paterno
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ApellidoPater)
                </dd>
                <dt class="col-sm-2">
                    Apellido Materno
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ApellidoMater)
                </dd>
                <dt class="col-sm-2">
                    Número de telefono
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NumeroTelefono)
                </dd>
                <dt class="col-sm-2">
                    CURP
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Curp)
                </dd>
                <dt class="col-sm-2">
                    RFC
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rfc)
                </dd>
                <dt class="col-sm-2">
                    Correo electrónico
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            </dl>
        </div>

        <div class="text-right">
           <div class="form-group">
                <a asp-area="" asp-controller="Usuarios" asp-action="Edit">Editar
                    <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                </a>
           </div>
        </div>
    </form>
</body>


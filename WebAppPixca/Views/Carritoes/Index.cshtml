@model IEnumerable<WebAppPixca.Models.Carrito>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutUser";
}

<head>
    <link href="~/css/IndexCarrito.css" rel="stylesheet" />
</head>

<body>
    <h1>Carrito de compras</h1>
    <div class="">
        <div class="row">
            <form class="form col-md-7">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>
                                Producto
                            </th>
                            <th>
                                Cantidad 
                            </th>
                            <th>
                                Precio Unitario
                            </th>
                            <th>
                                Fecha agregado
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IdProductNavigation.NombreProduct)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CantidadProductos) KG
                                </td>
                                <td>
                                    $@Html.DisplayFor(modelItem => item.TotalPrecio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdCarrito">Ver</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdCarrito">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </form>
            <form class="formResume col-md-4">
                <div>
                    <h2>Resumen de compra</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Productos</th>
                                <th>Precio total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Productos totales:@ViewBag.CantidadCarrito</td>
                                <td>$57.12</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>Total:</td>
                                <td>$57.12</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="text-right">
                    <button type="button" class="btn btn-primary"> Comprar todo
                        <a asp-controller="Usuarios" asp-action="DetailsProduct"
                           asp-route-id="">
                       </a>
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>